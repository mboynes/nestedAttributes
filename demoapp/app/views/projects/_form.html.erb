<% form_for @project do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  
  <h3>Tasks</h3>
	<ul id="tasks">
  <% f.fields_for :tasks do |task_form| %>
    <%= render :partial => 'task', :locals => { :f => task_form } %>
  <% end %>
	</ul>
  <p><%= add_child_link "New Task", :tasks %></p>
  <%= new_child_fields_template(f, :tasks)%>
  <p><%= f.submit "Submit" %></p>
<% end %>
